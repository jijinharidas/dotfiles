align=center
separator=false
color=#ffffff
separator_block_width=20
markup=pango

[battery]
command=~/.config/i3blocks/battery/battery_info.sh
interval=2
label=<span color="#ff79c6">ğŸ”‹ </span>


[wifi]
command=iwgetid -r | tr '\n' ' ' && grep $(iwgetid -m | awk '{ printf "%s", $1 }') /proc/net/wireless | awk '{ printf "%i%\n", int($3 * 100 / 70) }'
instance=wlp11s0f3u1
interval=5
label=<span color="#ffb86c">ï‡« </span>

[home]
command=df -h /home | awk 'FNR==2{print $4}'
interval=3
label=<span color="#a9e185">ï€• </span>


[cpu_usage]
command=~free -h | awk
interval=repeat
label=<span color="#8be9fd">î‰¦ </span>

[cpu-temperature]
command=~/.config/i3blocks/blocks/temperature/temperature
interval=2
SENSOR_CHIP="jc42-i2c-0-1a"
label=<span color="#8be9fd">ï‹‰ </span>

[memory]
command=free -h --si | awk 'FNR==2{ print $0 }' | awk '{ print $7 }'
interval=2
label=<span color="#a9e185">ï­ </span>

[volume]
command=pulseaudio-ctl full-status | awk '{ printf "%i%\n", $1 }'
interval=2
label=<span color="#ff79c6">ï€§ </span>

[time]
command=date '+%I:%M'
interval=1
label=<span color="#ffb86c">ï€— </span>

[date]
command=date '+%A %e'
interval=60
label=<span color="#8be9fd">ï³ </span>
